<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_dialog">

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/branco"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Deseja sair do aplicaitvo." />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_positivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_32sdp"
        android:fontFamily="@font/base2"
        android:text="@string/lbl_sim"
        android:textColor="@color/branco"
        app:cornerRadius="@dimen/_2sdp"
        app:backgroundTint="@color/colorPrimaryDark"
        app:strokeColor="@color/branco"
        app:strokeWidth="@dimen/_2sdp"
        app:rippleColor="@color/branco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt_negativo"
        app:layout_constraintTop_toBottomOf="@+id/tv_msg" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_negativo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_32sdp"
        android:fontFamily="@font/base2"
        android:text="@string/lbl_nao"
        android:textColor="@color/branco"
        app:cornerRadius="@dimen/_2sdp"
        app:rippleColor="@color/branco"
        app:strokeColor="@color/branco"
        app:backgroundTint="@color/colorPrimaryDark"
        app:strokeWidth="@dimen/_2sdp"
        app:layout_constraintEnd_toStartOf="@+id/bt_positivo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_msg" />

</androidx.constraintlayout.widget.ConstraintLayout>