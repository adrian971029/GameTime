<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fd_cinza"
    tools:context=".view.JogoVelhaActivity">


    <TextView
        android:id="@+id/text_view_activity_jogo_velha"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif"
        android:text="@string/string_activity_jogo_velha"
        android:textAlignment="center"
        android:textColor="@color/branco"
        android:textSize="@dimen/_30sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tabuleiro"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/tabuleiro"
        android:layout_width="328dp"
        android:layout_height="325dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/text_view_activity_jogo_velha"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn1"
            android:layout_width="108dp"
            android:layout_height="110dp"
            android:backgroundTint="@color/branco"
            android:insetTop="6dp"
            android:insetRight="6dp"
            android:textColor="@color/colorTextoBtnJogoVelha"
            android:textSize="55sp"
            android:textStyle="bold"
            app:cornerRadius="0dp"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="108dp"
            android:layout_height="110dp"
            android:backgroundTint="@color/branco"
            android:insetRight="6dp"
            android:textColor="@color/colorTextoBtnJogoVelha"
            android:textSize="55sp"
            android:textStyle="bold"
            app:cornerRadius="0dp"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="108dp"
            android:layout_height="110dp"
            android:backgroundTint="@color/branco"
            android:insetRight="6dp"
            android:textColor="@color/colorTextoBtnJogoVelha"
            android:textSize="55sp"
            android:textStyle="bold"
            app:cornerRadius="0dp"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="108dp"
            android:layout_height="110dp"
            android:backgroundTint="@color/branco"
            android:insetRight="6dp"
            android:textColor="@color/colorTextoBtnJogoVelha"
            android:textSize="55sp"
            android:textStyle="bold"
            app:cornerRadius="0dp"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="108dp"
            android:layout_height="110dp"
            android:backgroundTint="@color/branco"
            android:insetRight="6dp"
            android:textColor="@color/colorTextoBtnJogoVelha"
            android:textSize="55sp"
            android:textStyle="bold"
            app:cornerRadius="0dp"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="108dp"
            android:layout_height="110dp"
            android:backgroundTint="@color/branco"
            android:insetRight="6dp"
            android:textColor="@color/colorTextoBtnJogoVelha"
            android:textSize="55sp"
            android:textStyle="bold"
            app:cornerRadius="0dp"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="108dp"
            android:layout_height="110dp"
            android:backgroundTint="@color/branco"
            android:insetRight="6dp"
            android:textColor="@color/colorTextoBtnJogoVelha"
            android:textSize="55sp"
            android:textStyle="bold"
            app:cornerRadius="0dp"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="108dp"
            android:layout_height="110dp"
            android:backgroundTint="@color/branco"
            android:insetRight="6dp"
            android:textColor="@color/colorTextoBtnJogoVelha"
            android:textSize="55sp"
            android:textStyle="bold"
            app:cornerRadius="0dp"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="108dp"
            android:layout_height="110dp"
            android:backgroundTint="@color/branco"
            android:insetRight="6dp"
            android:textColor="@color/colorTextoBtnJogoVelha"
            android:textSize="55sp"
            android:textStyle="bold"
            app:cornerRadius="0dp"
            app:layout_column="2"
            app:layout_row="3" />

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>